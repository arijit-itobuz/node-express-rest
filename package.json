{
  "name": "node-express-rest",
  "version": "1.0.0",
  "type": "module",
  "license": "UNLICENSED",
  "private": true,
  "author": "Arijit Das <arijit@itobuz.com>",
  "description": "",
  "main": "./src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "start:dev": "tsx watch ./src/main.ts",
    "start:prod": "node ./dist/index.cjs",
    "build:esbuild": "npm run clean && node ./esbuild.js",
    "build:swc": "npm run clean && npm run pre-commit && swc ./src -d ./dist --strip-leading-paths",
    "build:ncc": "npm run clean && npm run pre-commit && ncc build ./src/main.ts -o ./dist -m -C",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src && biome check --write ./src",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run format && npm run lint && npm run type-check"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@swc/cli": "^0.4.1-nightly.20240914",
    "@swc/core": "^1.7.26",
    "@swc/helpers": "^0.5.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^18.16.3",
    "@types/node-schedule": "^2.1.7",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^9.0.1",
    "@vercel/ncc": "^0.38.2",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "http-status": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.4",
    "nodemailer": "^6.9.15",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
